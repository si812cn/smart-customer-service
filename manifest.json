{
  "manifest_version": 3,
  "name": "智能客服助手",
  "version": "1.0.0",
  "description": "提供多平台直播与电商AI智能互动及数据采集解决方案，覆盖抖音、快手、小红书、视频号、百度、淘宝、京东等主流平台，支持直播间AI评论回复、店铺AI客服自动应答，并实时采集各平台直播大屏数据看板核心数据，助力直播运营智能化与数据实时监控。",
  "author": "Smart Customer Service Team",
  "icons": {
    "64": "icons/icon64.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "all_frames": true,
      "css": [
        "ui/css/layui.css"
      ],
      "js": [
        "ui/layui.js",
        "popup.js",
        "ui/config/panel.js",
        "ui/utils/index.js",
        "ui/services/AIProvider.js",
        "ui/services/cozeProvider.js",
        "ui/services/openaiProvider.js",
        "ui/handlers/config.js",
        "ui/handlers/ai.js",
        "ui/middleware/auth.js",
        "ui/middleware/logging.js",
        "ui/middleware/index.js",
        "background.js",
        "content.js"
      ],
      "type": "module",
      "matches": [
        "https://*.jinritemai.com/*",
        "https://*.kwaixiaodian.com/*",
        "https://*.xiaohongshu.com/*",
        "https://*.weixin.qq.com/*",
        "https://*.baidu.com/*",
        "https://*.taobao.com/*",
        "https://*.jd.com/*",
        "https://*.tiktok.com/*"
      ],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "ui/font/*",
        "ui/config/panel.js"
      ],
      "matches": [
        "https://*.jinritemai.com/*",
        "https://*.kwaixiaodian.com/*",
        "https://*.xiaohongshu.com/*",
        "https://*.weixin.qq.com/*",
        "https://*.baidu.com/*",
        "https://*.taobao.com/*",
        "https://*.jd.com/*",
        "https://*.tiktok.com/*"
      ]
    }
  ],
  "permissions": [
    "webRequest",
    "debugger",
    "webNavigation",
    "activeTab",
    "scripting",
    "clipboardRead",
    "clipboardWrite",
    "storage",
    "tabs",
    "cookies",
    "downloads",
    "management",
    "nativeMessaging"
  ],
  "host_permissions": [
    "https://*.jinritemai.com/*",
    "https://*.kwaixiaodian.com/*",
    "https://*.xiaohongshu.com/*",
    "https://*.weixin.qq.com/*",
    "https://*.baidu.com/*",
    "https://*.taobao.com/*",
    "https://*.jd.com/*",
    "https://*.tiktok.com/*",
    "https://api.coze.cn/*",
    "https://api.openai.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "智能客服控制台",
    "default_icon": {
      "64": "icons/icon64.png",
      "128": "icons/icon128.png"
    }
  },
  "options_page": "dashboard/index.html",
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; worker-src 'self';"
  }
}